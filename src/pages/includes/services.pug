                source(srcset=servicesPath768 + el.img media="(max-width: 900px)")
                source(srcset=servicesPath1024 + el.img media="(max-width: 1200px)")
                source(srcset=servicesPath + el.img)
                img(src=servicesPath + el.img, alt=el.title)
